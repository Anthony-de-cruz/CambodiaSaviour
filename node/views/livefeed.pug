extends layout
block content
  head
    script(src='/javascripts/livefeed.js', defer)
  body
    div#report-table-container
      h2 Live Reports
      table#report-table
        thead
          tr
            th ID
            th Type
            th Severity
            th Time of Report
            th Latitude
            th Longitude
            th Resolved
            if loggedIn
              th Resolve Report
        tbody
          each report in reports
            tr
              td= report.id
              td= report.report_type
              td= report.severity
              td= report.time_of_report
              td= report.latitude
              td= report.longitude
              td= report.resolved ? "Yes" : "No"
              if loggedIn
                td= "placeholder"
    script.
        let reportsData = !{JSON.stringify(reports)}
        let isLoggedIn = !{loggedIn}
