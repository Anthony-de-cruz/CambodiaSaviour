    script(src='/javascripts/mapController.js', defer)
  body
    nav.navbar
      .logo Ranger Radar
      .nav-links
        a.nav-item(href='/report') Report
        .nav-item Map
        .nav-item Live Feed
        .nav-item(href='/register') Register
        if loggedIn 
          a.nav-item(href='/logout') Logout
        else 
          a.nav-item(href='/login') Login
        
    div#map-container
      button#showVillageButton <i class="fa-solid fa-vihara"></i> Pu Nagol Community Meeting Hall
